####################
# General settings #
####################

# Your OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Ollama server settings
OLLAMA_PORT=11434

# Open WebUI settings
OPENWEBUI_PORT=3000

#######################
# Crawlect LLM config #
#######################

# Use OpenAI first if available
USE_OPENAI_FIRST=true

# OpenAI model (gpt-4o, gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4o

# Ollama local API settings
OLLAMA_API_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=mistral

# Enable Web UI
ENABLE_OPEN_WEBUI=true